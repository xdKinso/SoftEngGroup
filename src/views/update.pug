extends layout.pug

block head
  link(rel="stylesheet", href="/index.css")
  link(rel="stylesheet", href="/update.css")

block content
  .container
    h2 Update the Database
    p Please fill in the information to update the database.
    form(action='/api/update', method='POST')
      label(for='countryname') Enter your Country name:
      input(name='countryname', type='text', required)

      label(for='countrycode') Enter your Country code:
      input(name='countrycode', type='text', required)

      label(for='district') Enter your District:
      input(name='district', type='text', required)

      label(for='population') Enter your Population:
      input(name='population', type='number', required)

      input(type='submit', value='Submit')
      #successMessage.hidden
        h3 Success!
        p The country information has been successfully updated.
