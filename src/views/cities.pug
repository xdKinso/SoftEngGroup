extends layout.pug

block head
  link(rel="stylesheet", href="/cities.css")

block content
  label Select a website to display: 
  select(name='dropdown')
    option(value='Cities') City
    option(value='Country') Country
    option(value='Country Language') Country language
    if value == "cities"
  h2 Cities
  table
    thead
      th.text-center üè¥
      th City
      th.number Population
    tbody
      each row in rows
        tr
          td.fit #{row.CountryCode}
          td #{row.Name}
          - const population = new Intl.NumberFormat().format(row.Population);
          td.fit.number #{population}