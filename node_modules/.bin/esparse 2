#!/bin/sh ##!/bin/sh specifies that this script should be executed with the default shell
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')") #The $basedir variable is then set to the directory of the script

case `uname` in #The case statement checks the output of the uname command
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then #if statement checks if the node executable exists in the $basedir directory
  exec "$basedir/node"  "$basedir/../esprima/bin/esparse.js" "$@"
else 
  exec node  "$basedir/../esprima/bin/esparse.js" "$@"
fi
