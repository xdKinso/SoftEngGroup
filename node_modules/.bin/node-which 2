#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')") #The $basedir variable is then set to the directory of the script 

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then # the if statement checks if the node executable is executable
  exec "$basedir/node"  "$basedir/../which/bin/node-which" "$@"
else 
  exec node  "$basedir/../which/bin/node-which" "$@"
fi
