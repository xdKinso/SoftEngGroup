#!/bin/sh ##!/bin/sh specifies that this script should be executed with the default shell
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')") #The dirname command extracts the directory part of the script's path

case `uname` in #case statement checks the output of the uname command,
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then #if statement checks if the node executable exists in the $basedir directory
  exec "$basedir/node"  "$basedir/../import-local/fixtures/cli.js" "$@"
else 
  exec node  "$basedir/../import-local/fixtures/cli.js" "$@"
fi
