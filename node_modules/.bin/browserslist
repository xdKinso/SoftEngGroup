#!/bin/sh 
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")# basedir is a variable to the directory of the script

case `uname` in # case is statement checks the output of the uname command
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then # the if  statement checks if the node executable is executable 
  exec "$basedir/node"  "$basedir/../browserslist/cli.js" "$@" # If node is not executable in $basedir, then the script falls back to using the system node executable.
else 
  exec node  "$basedir/../browserslist/cli.js" "$@"
fi
